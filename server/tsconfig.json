{
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "outDir": "../build",
        "sourceMap": false,
        "skipLibCheck": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "include": ["**/*"],
}
