generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id           String        @id @unique
    name         String
    email        String?
    avatar       String?
    apps         Application[]
    auth_session Session[]
    key          Key[]
}

model Session {
    id             String @id @unique
    user_id        String
    active_expires BigInt
    idle_expires   BigInt
    user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
}

model Key {
    id              String  @id @unique
    hashed_password String?
    user_id         String
    user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
}

model Application {
    id            String    @id @default(cuid())
    name          String
    clientSecret  String?
    totalLogs     Int       @default(0)
    totalCommands Int       @default(0)
    logs          Log[]
    commands      Command[]
    connected     Boolean   @default(false)
    owner         User      @relation(fields: [ownerId], references: [id])
    ownerId       String

    @@index([ownerId])
}

model Log {
    id    String       @id @default(uuid())
    app   Application? @relation(fields: [appId], references: [id])
    appId String?

    @@index([appId])
}

model Command {
    id      String       @id @default(uuid())
    name    String
    options String
    app     Application? @relation(fields: [appId], references: [id])
    appId   String?

    @@index([appId])
}
